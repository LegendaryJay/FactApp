<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FactApp.MainPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="#34113a">

    <StackLayout>
        <Label
            Margin="0,10"
            FontSize="Large"
            HorizontalOptions="Center"
            Text="Facts about Tug"
            TextColor="White" />
        <ListView
            x:Name="factList"
            BackgroundColor="#541c5c"
            ItemsSource="{Binding Facts}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell Tapped="OnFactSelected">
                        <StackLayout BackgroundColor="#745089" Orientation="Horizontal">
                            <Image
                                Margin="10,0"
                                HeightRequest="50"
                                Source="{Binding Image}"
                                WidthRequest="50" />
                            <Label
                                Text="{Binding Title}"
                                TextColor="White"
                                VerticalOptions="Center" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
